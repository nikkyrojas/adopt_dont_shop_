<% flash.each do |type, msg| %>
  <div class="alert alert-info"> 
  <p style="color:red;"><%= "Error Missing Field(s)" %></p>
  </div>
<% end %>


<h2>New Application</h2>
<%= form_with url: "/applications", method: :post, local: true do |form| %>
    <p><b><%= form.label :applicant_name %></b>: <%= form.text_field :applicant_name %></p>
    <p><b><%= form.label :street_address %></b>: <%= form.text_field :street_address %></p>
    <p><b><%= form.label :city %></b>: <%= form.text_field :city %></p>
    <p><b><%= form.label :state %></b>: <%= form.text_field :state %></p>
    <p><b><%= form.label :zip_code %></b>: <%= form.text_field :zip_code %></p>
    <p><b><%= form.label :description %></b>: <%= form.text_field :description %></p>
    <p><%= form.submit "Submit Application" %></p>
<% end %>
