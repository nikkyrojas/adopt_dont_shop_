<h1>Application ID#<%= @application.id %></h1>

<p><b>Applicants Name:</b> <%= @application.applicant_name %></p>
<p><b>Address:</b> <%= @application.street_address %></p>
<p><b>City:</b> <%= @application.city %></p>
<p><b>State:</b> <%= @application.state %></p>
<p><b>Zip Code:</b> <%= @application.zip_code %></p>
<p><b>Description:</b> <%= @application.description %></p>
<p><b>Added Pets:</p></b>
    <% @application.pets.each do |pet| %>
        <p><%= link_to "#{pet.name}", "/pets/#{pet.id}"  %></p>
    <% end %>
    
<% if @application.status == "In progress"  %>
    <h3>Search and Add a Pet to this Application: </h3>
    <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
    <%= f.label :search %>
    <%= f.text_field :search %>
    <%= f.submit "Search Pets" %>
    <% end %>
    
    <% if params[:search].present?  %>
        <h3>Search Results: <% @pets.each do |pet| %></h3>
            <%= pet.name %>
            <%= button_to "Add #{pet.name}", "/applications/#{@application.id}?pet_id=#{pet.id}", method: :patch %>
        <% end %>
    <% end %>

    <% if @application.pets.count > 0 %>
        <%= form_with url:"/applications/#{@application.id}?submit=true", method: :patch, local: true do |f| %>
            <%= f.label :description %>
            <%= f.text_field :description %>
            <%= f.submit "Submit Application" %>
        <% end %>
    <% end %>
<% end %>

<h3>Status: <%= @application.status %></h3>



         
  
