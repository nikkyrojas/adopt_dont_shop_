<h1>Application</h1>

<h3>Applicants Name: <%= @application.applicant_name %></h3>
    
    
    <% if @application.status == "In progress"  %>
        <h4>Add a Pet to this Application 
        <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
        <%= f.label :search %>
        <%= f.text_field :search %>
        <%= f.submit "Search" %>
        <% end %>
    <% end %>
        </h4>
    
    <% if params[:search].present?  %>
        <h4><p>Pet Result: <%@matched_pets.each do |pet| %></p></h4>
            <div id="pets-<%=pet.id%>">

                <h4><p><%= link_to pet.name, "/pets/#{pet.id}" %><%= form_with url: "/applications/#{@application.id}", method: :post, local: true do |f| %> <%= f.submit "Add Pet" %></p></h4>

            <% end %>
            </div>
        <% end %>
        <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
        <%= f.submit "Submit" %>
        <% end %>
    <% end %>

    <% if @application.status == "In progress" %>
    
    <h3>Added Pets: </h3>
        <% @application.pets.each do |pet| %>
            <%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
            <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
            <%= f.submit "Submit" %>
            <% end %>
        <% end %>
    <% end %>

    <p>Status: <%= @application.status %></p>
    <p>Address: <%= @application.address %></p>
    <p>Description: <%= @application.description %></p>
    

    <% if @application.pets.length > 0 && @application.status == "In Progress" %>
        <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
        <%= f.submit "Search" %>
        <% end %>
     <% end %>


    <% if @application.pets.length > 0 && @application.status != "Pending" || @application.status == "In Progress" %>
        <%= form_with url: "/applications/#{@application.id}", method: :patch, local: true do |f| %>
        <p><%= f.label "Why are you a good fit for these companions? Explain below." %></p>
        <p><%= f.text_area :description, required: true %></p>
        <p><%= f.submit "Submit Application" %></p>
        <% end %>
     <% end %>
         
    <h3><p>Adoptable Pets: <%@pets.each do |pet| %></p></h3>
    <h4><p><%= link_to pet.name, "/pets/#{pet.id}"  %></p></h4>
    <% end %>
